<style>
  .receipt-container {
    font-family: 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    max-width: 600px;
    margin: 0 auto;
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    color: #333;
  }
  
  .receipt-header {
    background: linear-gradient(135deg, #2D5BFF, #1A3FCC);
    color: white;
    padding: 20px;
    text-align: center;
    position: relative;
  }
  
  .receipt-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 15px;
  }
  
  .receipt-logo img {
    height: 50px;
    margin-right: 10px;
  }
  
  .receipt-status {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50px;
    padding: 6px 15px;
    font-size: 14px;
    margin-top: 10px;
  }
  
  .receipt-amount {
    margin: 20px 0 10px;
    font-size: 38px;
    font-weight: 700;
  }
  
  .receipt-body {
    padding: 25px;
  }
  
  .receipt-section {
    margin-bottom: 20px;
    border-bottom: 1px solid #eee;
    padding-bottom: 15px;
  }
  
  .receipt-section:last-child {
    border-bottom: none;
    margin-bottom: 0;
  }
  
  .section-label {
    color: #666;
    font-size: 14px;
    margin-bottom: 5px;
  }
  
  .section-value {
    font-weight: 600;
    font-size: 16px;
    margin: 0;
  }
  
  .receipt-footer {
    background: #f9f9f9;
    padding: 15px;
    font-size: 12px;
    color: #666;
    text-align: center;
    border-top: 1px solid #eee;
  }
  
  .download-btn {
    display: block;
    background: #2D5BFF;
    color: white;
    border: none;
    padding: 12px 25px;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    margin: 20px auto 5px;
    transition: background 0.3s;
    text-align: center;
    text-decoration: none;
  }
  
  .download-btn:hover {
    background: #1A3FCC;
  }
  
  .loading {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.9);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }
  
  .loading-content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .loading-spinner {
    border: 3px solid #f3f3f3;
    border-top: 3px solid #2D5BFF;
    border-radius: 50%;
    width: 30px;
    height: 30px;
    animation: spin 1s linear infinite;
    margin-bottom: 15px;
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  @media (max-width: 600px) {
    .receipt-container {
      width: 95%;
      margin: 0 auto;
      border-radius: 10px;
    }
    
    .receipt-amount {
      font-size: 32px;
    }
  }
</style>

