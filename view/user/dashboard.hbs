    <script>
        $(window).on("load", () => {
            setTimeout(() => {
                $(".loading").fadeOut(300);
                // Show default section
                $("#myacct").removeClass("hidden").addClass("section-enter");
                // Mark the first nav item as active
                $("a[href='#myacct']").addClass("active");
            }, 800);
        });

        // Sidebar Toggle - Fixed to ensure it works properly
$("#toggle-sidebar").click(function() {
    console.log("Toggling sidebar");
    $("#sidebar").toggleClass("sidebar-hidden");
    $("#sidebar-overlay").toggleClass("show");
    console.log("Sidebar class:", $("#sidebar").attr("class"));
});
        
        // Close sidebar when overlay is clicked (mobile)
        $("#sidebar-overlay").click(function() {
            $("#sidebar").addClass("sidebar-hidden");
            $("#sidebar-overlay").removeClass("show");
        });

        // Section Navigation
        $("a[href^='#']").click(function(e) {
            e.preventDefault();
            const target = $(this).attr("href");
            
            // Remove active class from all nav items
            $(".nav-item").removeClass("active");
            // Add active class to clicked nav item
            $(this).addClass("active");
            
            // Hide all sections
            $(".section").addClass("hidden").removeClass("section-enter");
            // Show target section with animation
            $(target).removeClass("hidden").addClass("section-enter");
            
            if ($(window).width() < 768) {
                $("#sidebar").addClass("sidebar-hidden"); // Close sidebar on mobile after selection
                $("#sidebar-overlay").removeClass("show"); // Hide overlay
            }
        });

        // Modal Handling - Fixed to ensure it works properly
        $("#transfertofincchbank").click(function() {
            $("#tranferfincchbankModal").removeClass("modal-hidden");
        });
        
        $("#transfertocommercialbank").click(function() {
            $("#tranfercommercialbankModal").removeClass("modal-hidden");
        });
        
        $(".close-modal").click(function() {
            $(".modal").addClass("modal-hidden");
        });
        
        // Close modal when clicking outside (on the overlay)
        $(".modal").click(function(e) {
            if (e.target === this) {
                $(this).addClass("modal-hidden");
            }
        });

        // FAQ Accordion
        $("#faq button").click(function() {
            $(this).next().toggleClass("hidden");
            $(this).find("i").toggleClass("fa-chevron-down fa-chevron-up");
        });

        // Scroll to Top
        $("#btn-scroll-up").click(function(e) {
            e.preventDefault();
            $("html, body").animate({ scrollTop: 0 }, 500);
        });

        // Google Translate
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.HORIZONTAL}, 'google_translate_element');
        }
        
        // Show/Hide password functionality
        $(".fa-eye-slash").click(function() {
            const input = $(this).prev();
            if (input.attr("type") === "password") {
                input.attr("type", "text");
                $(this).removeClass("fa-eye-slash").addClass("fa-eye");
            } else {
                input.attr("type", "password");
                $(this).removeClass("fa-eye").addClass("fa-eye-slash");
            }
        });
    </script>
    <script src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
